		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		  <if test="nametpd != null and nametpd != ''"> and nametpd = #{nametpd} </if>
